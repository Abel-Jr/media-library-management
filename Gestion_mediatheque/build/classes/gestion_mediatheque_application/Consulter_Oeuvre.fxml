<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" fx:id="pane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gestion_mediatheque_application.Consulter_OeuvreController">
   <children>
      <ImageView fx:id="image" fitHeight="400.0" fitWidth="600.0" opacity="0.22" pickOnBounds="true">
         <image>
            <Image url="@biblio%20photo.jpg" />
         </image>
      </ImageView>
      <Label fx:id="Lliste" layoutX="59.0" layoutY="61.0" text="Liste des oeuvres : ">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <ComboBox fx:id="Comboname" layoutX="388.0" layoutY="57.0" prefWidth="150.0" />
      <CheckBox fx:id="Check_oeuvres" layoutX="59.0" layoutY="175.0" mnemonicParsing="false" text="            Afficher les caractéristiques de l'oeuvre">
         <font>
            <Font size="15.0" />
         </font>
      </CheckBox>
      <CheckBox fx:id="Check_pret" layoutX="59.0" layoutY="252.0" mnemonicParsing="false" text="            Afficher les prets en cours">
         <font>
            <Font size="15.0" />
         </font>
      </CheckBox>
      <Button fx:id="retour" layoutX="59.0" layoutY="343.0" mnemonicParsing="false" onAction="#RetourAction" style="-fx-background-color: #C60800;" text="retour" textFill="WHITE">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Button fx:id="valider" layoutX="486.0" layoutY="343.0" mnemonicParsing="false" onAction="#ValiderAction" style="-fx-background-color: #22780F;" text="valider" textFill="WHITE">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Label fx:id="Lerror" layoutX="40.0" layoutY="120.0" text="Attention veuillez choisir une oeuvre et sélectionner au moins une case" textFill="#f70000" visible="false">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
